extends layout

block styles
  link(rel='stylesheet', href=assets.main.css)
  
block scripts
  script(src=assets.main.js) 

block content
  #chartWrapper
    #chart(batchId=batchId)
    img#loader(src='images/loader.gif')
  #booksWrapper
  #controlWrapper
    #batches
      select
        option(selected) Choose batch
        each batch in batches
          option(batchId=batch)= new Date(parseInt(batch, 10))
      button#update


    